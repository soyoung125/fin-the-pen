{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* 절대 경로 관련 설정 */
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "*"
      ],
      "@api/*": [
        "app/api/*"
      ],
      "@redux/*": [
        "app/redux/*"
      ],
      "@routes/*": [
        "app/routes/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ]
    }
  },
  "include": [
    "src",
    "node_modules/vitest/globals.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
